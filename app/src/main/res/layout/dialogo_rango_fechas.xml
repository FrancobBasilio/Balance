<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/card_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rango de fechas"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="24dp"/>

    <!-- Desde -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desde"
        android:textSize="13sp"
        android:textColor="@color/text_hint"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/layoutFechaDesde"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_input"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tvFechaDesde"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Seleccionar"
            android:textSize="15sp"
            android:textColor="@color/text_primary"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_calendario"
            app:tint="@color/text_hint"/>

    </LinearLayout>

    <!-- Hasta -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasta"
        android:textSize="13sp"
        android:textColor="@color/text_hint"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/layoutFechaHasta"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/border_input"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tvFechaHasta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Seleccionar"
            android:textSize="15sp"
            android:textColor="@color/text_primary"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_calendario"
            app:tint="@color/text_hint"/>

    </LinearLayout>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelarFiltro"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Cancelar"
            android:textColor="@color/text_secondary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAplicarFiltro"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Aplicar"
            android:textColor="@color/white"
            app:backgroundTint="@color/gold"
            app:cornerRadius="8dp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>
