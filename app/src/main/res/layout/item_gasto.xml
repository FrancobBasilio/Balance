<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivIconoCategoria"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_billetera"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvNombreCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Necesidades"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/tvTipoCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mi pc no prende"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-light"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvMontoGasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/. 200"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/error_red"/>

            <TextView
                android:id="@+id/tvFechaGasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-15"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>

            <!-- Botones lado a lado: editar (izquierda) y eliminar (derecha) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditarGasto"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Editar gasto"
                    app:icon="@drawable/ic_edit_balance"
                    app:iconSize="20dp"
                    app:iconTint="@color/background_primary"
                    app:iconPadding="0dp"
                    app:cornerRadius="18dp"
                    app:backgroundTint="@color/balance"
                    android:padding="7dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEliminarGasto"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Eliminar gasto"
                    app:icon="@android:drawable/ic_menu_delete"
                    app:iconSize="20dp"
                    app:iconTint="@android:color/white"
                    app:iconPadding="0dp"
                    app:cornerRadius="18dp"
                    app:backgroundTint="@color/error_red"
                    android:padding="7dp"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
