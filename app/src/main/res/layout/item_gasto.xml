<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/borde"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Icono circular - sin padding extra -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIcono"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/ivIconoCategoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="12dp">

            <TextView
                android:id="@+id/tvNombreCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CategorÃ­a"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvTipoCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Monto y fecha -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvMontoGasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-S/. 200"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/error_red"/>

            <TextView
                android:id="@+id/tvFechaGasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Ene"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <!-- Botones minimalistas -->
        <ImageButton
            android:id="@+id/btnEditarGasto"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_edit_balance"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Editar"
            android:padding="8dp"
            app:tint="@color/text_hint"/>

        <ImageButton
            android:id="@+id/btnEliminarGasto"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Eliminar"
            android:padding="8dp"
            app:tint="@color/text_hint"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
