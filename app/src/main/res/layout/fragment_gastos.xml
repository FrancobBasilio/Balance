<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFiltros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTodos"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todos"
                    android:checked="true"
                    android:textColor="@color/text_primary"
                    app:chipBackgroundColor="@color/chip_background" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDia"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoy"
                    android:textColor="@color/text_primary"
                    app:chipBackgroundColor="@color/chip_background" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSemana"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semana"
                    android:textColor="@color/text_primary"
                    app:chipBackgroundColor="@color/chip_background" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMes"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mes"
                    android:textColor="@color/text_primary"
                    app:chipBackgroundColor="@color/chip_background" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPersonalizado"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:checkable="true"
                    app:chipIcon="@drawable/ic_calendario"
                    app:chipIconVisible="true"
                    app:chipIconSize="24dp"
                    app:chipIconTint="@color/chip_icon_color"
                    app:chipStrokeWidth="1dp"
                    app:chipStrokeColor="@color/gold"
                    app:chipBackgroundColor="@color/chip_background"
                    android:contentDescription="Filtro personalizado" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGastos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        android:background="@color/background_primary" />

</LinearLayout>
