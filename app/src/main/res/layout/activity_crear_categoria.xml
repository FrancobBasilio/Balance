<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- Header con botón de regreso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnRegresar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Regresar"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Crear Categoría"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/negro"
                android:layout_marginStart="12dp"/>

        </LinearLayout>

        <!-- Card del icono seleccionado -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/blanco">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <!-- Icono seleccionado -->
                <FrameLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ivIconoSeleccionado"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_comida"
                        android:scaleType="fitCenter"
                        android:background="@drawable/fondo_circular_solido"
                        android:padding="22dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="6dp"/>

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Toca para elegir una imagen o\nselecciona un icono con color"
                    android:textSize="12sp"
                    android:textColor="@color/gris"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Nombre de categoría -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Nombre de categoría"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombreCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tipo de categoría -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Categoría"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/negro"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/radioGroupTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="28dp">

            <RadioButton
                android:id="@+id/rbNecesidad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Necesidad"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbDeseo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Deseo"
                android:textSize="14sp"
                android:paddingStart="8dp"/>

        </RadioGroup>

        <!-- Iconos predeterminados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Iconos"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/negro"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona uno"
                android:textSize="11sp"
                android:textColor="@color/gris"
                android:textStyle="italic"/>

        </LinearLayout>

        <GridLayout
            android:id="@+id/gridIconos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:layout_marginBottom="28dp"
            android:alignmentMode="alignBounds"
            android:useDefaultMargins="false">

            <!-- Los iconos se agregarán programáticamente -->

        </GridLayout>

        <!-- Colores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Colores"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/negro"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desliza para ver más"
                android:textSize="11sp"
                android:textColor="@color/gris"
                android:textStyle="italic"/>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="32dp"
            android:paddingVertical="4dp">

            <LinearLayout
                android:id="@+id/linearLayoutColores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <!-- Los colores se agregarán programáticamente -->

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Botón Añadir -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnadirCategoria"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="AÑADIR CATEGORÍA"
            android:textSize="15sp"
            android:letterSpacing="0.05"
            app:cornerRadius="12dp"
            style="@style/boton"/>

    </LinearLayout>

</ScrollView>