<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.AcercaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo y nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_logo"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versión 1.0"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance+ te ayuda a registrar ingresos y gastos, ver tu balance disponible y organizar tus finanzas personales."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp"/>

        <!-- Buenas Prácticas -->
        <LinearLayout
            android:id="@+id/mcv_practicas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buenas prácticas"
                android:textSize="15sp"
                android:textColor="@color/text_primary"/>

            <ImageView
                android:id="@+id/iv_practicas"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/arrow_down_float"
                app:tint="@color/text_hint"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_practicas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:text="• Registra los movimientos el mismo día\n• Usa comentarios para identificar gastos\n• Revisa el Dashboard semanalmente"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borde"/>

        <!-- Pregunta 1 -->
        <LinearLayout
            android:id="@+id/mcv_pf_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="¿Puedo editar o eliminar un gasto?"
                android:textSize="15sp"
                android:textColor="@color/text_primary"/>

            <ImageView
                android:id="@+id/iv_pf_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/arrow_down_float"
                app:tint="@color/text_hint"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pf_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:text="Sí. En la sección Gastos, usa los botones de editar o eliminar en cada registro."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borde"/>

        <!-- Pregunta 2 -->
        <LinearLayout
            android:id="@+id/mcv_pf_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="El gráfico no se actualiza"
                android:textSize="15sp"
                android:textColor="@color/text_primary"/>

            <ImageView
                android:id="@+id/iv_pf_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/arrow_down_float"
                app:tint="@color/text_hint"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pf_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:text="Vuelve al Dashboard o espera unos segundos después de guardar."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borde"/>

        <!-- Pregunta 3 -->
        <LinearLayout
            android:id="@+id/mcv_pf_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Problemas al iniciar sesión"
                android:textSize="15sp"
                android:textColor="@color/text_primary"/>

            <ImageView
                android:id="@+id/iv_pf_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/arrow_down_float"
                app:tint="@color/text_hint"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pf_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:text="Revisa tu correo y contraseña. Verifica tu conexión a internet."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:visibility="gone"/>

        <!-- Fecha actualización -->
        <TextView
            android:id="@+id/tv_fecha_actualizada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Última actualización: Diciembre 2025"
            android:textColor="@color/text_hint"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="32dp"/>

    </LinearLayout>
</ScrollView>
